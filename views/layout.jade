doctype html
html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no')
    meta(name='theme-color', content='rgb(109, 76, 65)')
    title=i18n(header)
    // CSS
    link(href='/styles/materialize.min.css', type='text/css', rel='stylesheet')
    link(href='/styles/style.css', type='text/css', rel='stylesheet')
    link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css', type='text/css', rel='stylesheet')
    script(src='/js/modernizr.js')
    // Modernizr
  body#top.scrollspy
    // Pre Loader
    #loader-wrapper
      #loader
      .loader-section.section-left
      .loader-section.section-right
    // Navigation
    .navbar-fixed
      nav#nav_f.default_color(role='navigation')
        .container
          .nav-wrapper
            a#logo-container.brand-logo(href='/#top')
              img(style='width:180px',src='/images/'+i18n('logo'))
            ul.right.hide-on-med-and-down
              li
                a(href='/#intro') #{i18n('Service')}
              li
                a(href='/#work') #{i18n('restaurant')}
              //li
                a(href='/about') #{i18n('About')}
              li
                a(href='/#contact') #{i18n('Contact')} 
            ul#nav-mobile.side-nav
              li
                a(href='/#intro') #{i18n('Service')}
              li
                a(href='/#work') #{i18n('restaurant')}
              //li
                a(href='/about') #{i18n('About')}
              li
                a(href='/#contact') #{i18n('Contact')}
            a.button-collapse(href='#', data-activates='nav-mobile')
              i.mdi-navigation-menu
    block content
    //modal for successful message
    div#modalSuccessful.modal
      .modal-content
        p.center #{i18n('signup-successful')}
      //.modal-footer
        a.modal-action.modal-close.waves-effect.waves-red.btn-flat(href='#!') #{i18n('close')}
    div#modalFailed.modal
      .modal-content
        p.center #{i18n('signup-failed')}
    // Footer
    footer#contact.page-footer.default_color.scrollspy
      .container
        .row
          .col.l6.s12
            h5.white-text #{i18n('language')}
          .col.l6.s12
            h5.white-text #{i18n('Contact')}
            ul#social-inline
              li
                a.tooltipped.white-text(href='https://www.facebook.com/dindins',target='_blank',data-position='bottom',data-delay='50',data-tooltip='Follow us on Facebook')
                  i.small.fa.fa-facebook-square.white-text
              li
                a.tooltipped.white-text(href='https://twitter.com/DinDinsClub',target='_blank',data-position='bottom',data-delay='50',data-tooltip='Follow us on Twitter')
                  i.small.fa.fa-twitter-square.white-text              
              li
                a.tooltipped.white-text(href='https://www.instagram.com/dindinsclub',target='_blank',data-position='bottom',data-delay='50',data-tooltip='Follow us on Instagram')
                  i.small.fa.fa-instagram.white-text
              li
                a.tooltipped.white-text(href='mailto:info@dindins.club',data-position='bottom',data-delay='50',data-tooltip='Email us')
                  i.small.fa.fa-envelope-o.white-text
      .footer-copyright.default_color_solid
        .container
          | 2015 
          a.white-text(href='/') #{i18n('Din Dins')}
    block scripts
    script(src='https://code.jquery.com/jquery-2.1.1.min.js')
    script(src='js/materialize.min.js')
    script(src='js/init.js')
    script(type="text/javascript").
        var successMsg = '#{req.flash("success")}';
        var failedMsg = '#{req.flash("failed")}';
        $(document).ready (#{req.flash("success")}function () {
            $(window).scroll (function () {
                var sT = $(this).scrollTop();
                    if (sT >= 500) {
                        $('#nav_f').addClass('default_color_solid');
                        $('#nav_f').removeClass('default_color');
                    }
                    else if (sT >=350){
                        $('#signup-fixed-button').removeClass('hide');                     
                    }
                    else {
                        $('#nav_f').removeClass('default_color_solid');
                        $('#nav_f').addClass('default_color');
                        $('#signup-fixed-button').addClass('hide');                        
                    }
            });
            
            $(window).load (function (){
              if (successMsg){
                $('#modalSuccessful').openModal();
              }
              else if (failedMsg){
                $('#modalFailed').openModal();
              }
              
            });
        });